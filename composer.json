{
    "name": "2d3d/lottery",
    "description": "A modern lottery management system",
    "type": "project",
    "require": {
        "php": "^8.0",
        "ext-json": "*",
        "ext-pdo": "*",
        "vlucas/phpdotenv": "^5.5"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.0"
    },
    "autoload": {
        "psr-4": {
            "App\\": "includes/"
        },
        "files": [
            "includes/env_loader.php"
        ]
    },
    "scripts": {
        "post-install-cmd": [
            "mkdir -p storage/logs",
            "chmod -R 777 storage"
        ]
    },
    "config": {
        "optimize-autoloader": true,
        "preferred-install": "dist",
        "sort-packages": true
    }
}
